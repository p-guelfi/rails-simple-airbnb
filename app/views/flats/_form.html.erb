<div class="mt-3">
  <%= simple_form_for @flat, html: { class: 'simple_form new_flat' } do |f| %>
    <div class="form-group">
      <%= f.input :name, label: 'Name', required: true, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :address, label: 'Address', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :picture_url, label: 'Picture URL', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :description, label: 'Description', as: :text, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :price_per_night, label: 'Price per night', as: :integer, input_html: { class: 'form-control', step: 1 } %>
    </div>
    <div class="form-group">
      <%= f.input :number_of_guests, label: 'Number of guests', as: :integer, input_html: { class: 'form-control', step: 1 } %>
    </div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
