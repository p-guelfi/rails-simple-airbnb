<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>All <%= @flats.length %> flats.</p>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="d-flex">
              <div class="d-flex align-items-center me-3">
                <i class="fa-solid fa-people-line"></i>
                <span class="ms-1"><%= flat.number_of_guests %></span>
              </div>
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-euro-sign"></i>
                <span class="ms-1"><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions d-flex mt-3">
            <%= link_to "More Info", flat_path(flat), class: "me-3" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "me-3 text-warning" %>
            <%= link_to "Remove", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "me-3 text-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
